  },
  "scripts": {
    "start": "react-scripts start",
    "build": "GENERATE_SOURCEMAP=false INLINE_RUNTIME_CHUNK=false react-scripts build",
    "build:analyze": "npm run build && npx source-map-explorer 'build/static/js/*.js'",
    "serve": "node scripts/serve-prod.js",
    "serve:prod": "npm run build && npm run serve",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "deploy": "./deploy.sh",
    "deploy:vercel": "vercel --prod",
    "deploy:preview": "vercel"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "overrides": [
      {
        "files": [
          "src/service-worker.js"
        ],
        "globals": {
          "self": "readonly"
        },
        "rules": {
          "no-restricted-globals": "off"
        }
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/qrcode": "^1.5.5",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.50.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.3.0"
  },
  "keywords": [
    "gaming",
    "social",
    "qr-code",
    "multiplayer",
    "rewards",
    "cafe",
    "events",
    "react",
    "typescript",
    "supabase"
  ],
  "author": "Yenege Game App Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/yenege-game-app.git"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
