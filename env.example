# Supabase Configuration (REQUIRED)
REACT_APP_SUPABASE_URL=your-supabase-project-url
REACT_APP_SUPABASE_ANON_KEY=your-supabase-anon-key

# App Configuration
REACT_APP_APP_NAME=Yenege Game App
REACT_APP_APP_VERSION=1.0.0
REACT_APP_APP_ENV=production

# Backend API URL (REQUIRED for payments)
REACT_APP_API_URL=https://your-backend-url.com/api

# Frontend URL (for server-side configuration)
# Production: https://yenege.com
# Development: http://localhost:3000
FRONTEND_URL=https://yenege.com

# Google OAuth (Optional)
REACT_APP_GOOGLE_CLIENT_ID=your-google-client-id

# Payment Gateway (Optional)
REACT_APP_PAYMENT_GATEWAY_URL=your-payment-gateway-url
REACT_APP_PAYMENT_GATEWAY_KEY=your-payment-gateway-key

# Analytics (Optional)
REACT_APP_ANALYTICS_ID=your-analytics-id

# Google reCAPTCHA v3 (Required for form protection)
# Get your keys from: https://www.google.com/recaptcha/admin
REACT_APP_RECAPTCHA_SITE_KEY=6LdvXAcsAAAAADNg1OxeL_T5vP-LfA9zTcRS_pog

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_PAYMENTS=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_REALTIME=true

# Development/Production
# Set to 'true' to enable debug logging in production (not recommended)
REACT_APP_DEBUG=false
REACT_APP_LOG_LEVEL=error
