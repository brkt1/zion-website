{
  "name": "yenege-backend",
  "version": "1.0.0",
  "description": "Backend server for Yenege website with Chapa payment integration",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "prebuild": "NODE_ENV=development npm install || npm install",
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "ngrok": "node start-ngrok.js",
    "test-chapa": "node test-chapa-key.js",
    "test-payment": "node test-payment-init.js"
  },
  "dependencies": {
    "chapa-nodejs": "^1.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.0",
    "helmet": "^8.1.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-rate-limit": "^5.1.3",
    "@types/node": "^20.8.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.0"
  }
}
